generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  notifications Notification[]
}


model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String

  // ðŸ”¹ User relation
  userId    Int

  // ðŸ”¹ Optional image support (VERY IMPORTANT)
  imageUrl  String?  // for dynamic images
  imageKey  String?  // for local fallback

  createdAt DateTime @default(now())
}
